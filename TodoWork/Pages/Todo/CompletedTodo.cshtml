@page
@using TodoWork.BLL.DTOModels;
@model TodoWork.Pages.Todo.CompletedTodoModel
@{
    ViewData["Title"] = "Færdig opgaver";
}
<h4>Færdige opgaver</h4>

<details class="mt-3" open>
    <summary class="bg-danger text-light rounded fs-4 ps-3">Høj</summary>
    @foreach (DTOTodo item in Model.CompletedTask.Where(x => x.TaskPriority == (DTOTodo.Priority)1))
    {
        @await Component.InvokeAsync("CompletedTask", item)
    }
</details>

<details class="mt-3" open>
    <summary class="bg-orange text-light rounded ps-3 fs-4">Mellem</summary>
    @foreach (DTOTodo item in Model.CompletedTask.Where(x => x.TaskPriority == (DTOTodo.Priority)2))
    {
        @await Component.InvokeAsync("CompletedTask", item)
    }
</details>

<details class="mt-3" open>
    <summary class="bg-success rounded text-light ps-3 fs-4">Lav</summary>
    @foreach (DTOTodo item in Model.CompletedTask.Where(x => x.TaskPriority == (DTOTodo.Priority)3))
    {
        @await Component.InvokeAsync("CompletedTask", item)
    }
</details>

@await Component.InvokeAsync("ModalDelete")
