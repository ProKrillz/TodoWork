@model BLL.DTOModels.DTOTodo

<div class="modal fade" id="DeleteModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Slet opgave</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div>Vil du slette denne fil?</div>
                    <input id="recipient-name" asp-for="Id" hidden />
                    <input id="user" asp-for="UserId" hidden/>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" asp-page-handler="Delete">Ja</button>
                </div>
            </form>
        </div>
    </div>
</div>
